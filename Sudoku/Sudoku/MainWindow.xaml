<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Sudoku"
        xmlns:Properties="clr-namespace:Sudoku.Properties" x:Class="Sudoku.MainWindow"
        Title="Sudoku" Height="400" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Menu x:Name="mnuMain" IsMainMenu="True">
            <MenuItem Header="_Arkiv" x:Name="mnuFile">
                <MenuItem x:Name="mnuOpen" Header="_Öppna" Click="mnuOpen_Click_1">
                    <MenuItem.Icon>
                        <Image Source="Properties/Resources/Images/icons/Open.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="mnuSave" Header="_Spara" Click="mnuSave_Click_1">
                    <MenuItem.Icon>
                        <Image Source="Properties/Resources/Images/icons/Save.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="mnuExit" Header="A_vsluta" Click="mnuExit_Click_1"/>
            </MenuItem>
            <MenuItem Header="_Hjälp" x:Name="mnuHelp"/>
        </Menu>
        <local:Meny x:Name="menuComponent" Grid.ColumnSpan="4" Visibility="Visible"></local:Meny>
        <local:Spelplan x:Name="spelplanComponent" Grid.Column="3" Visibility="Collapsed"></local:Spelplan>
        <local:Easy1 x:Name="easyComponent1" Grid.ColumnSpan="3" Visibility="Collapsed"></local:Easy1>
        <local:Medium1 x:Name="mediumComponent1" Grid.ColumnSpan="3" Visibility="Collapsed"></local:Medium1>
        <local:Hard1 x:Name="hardComponent1" Grid.ColumnSpan="3" Visibility="Collapsed"></local:Hard1>
    </Grid>
</Window>
