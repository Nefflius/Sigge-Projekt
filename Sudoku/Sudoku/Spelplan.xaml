<UserControl x:Class="Sudoku.Spelplan"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sudoku"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="500">
    <Grid DockPanel.Dock="Right"  Margin="0,20,20,20">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Grid.Row="1" Margin="5" Background="Gray" FontFamily="Helvetica" FontSize="17" Foreground="White" Click="clickNyttSpel">NYTT SPEL</Button>
        <Button Grid.Row="2" Margin="5" Background="Gray" FontFamily="Helvetica" FontSize="20" Foreground="White" Click="clickRätta">RÄTTA</Button>
        <Button Grid.Row="3" Margin="5" Background="Gray" FontFamily="Helvetica" FontSize="20" Foreground="White" Click="clickHjälp">HJÄLP</Button>
        <Label Grid.Row="4" HorizontalAlignment="Center" FontFamily="Courier New" VerticalAlignment="Bottom">TIMER:</Label>
        <Label Grid.Row="5" HorizontalAlignment="Center" FontFamily="Courier New" FontSize="18">00:00:00</Label>
        <Button Grid.Row="8" Margin="5" Background="Gray" FontFamily="Helvetica" FontSize="17" Foreground="White" Click="clickAvsluta">AVSLUTA</Button>
    </Grid>
</UserControl>
